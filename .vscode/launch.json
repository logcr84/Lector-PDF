{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (.NET)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backend",
            "program": "${workspaceFolder}/Backend/bin/Debug/net10.0/Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Backend",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "NUGET_SCRATCH": "${workspaceFolder}/tmp/nuget",
                "DOTNET_CLI_HOME": "${workspaceFolder}/tmp/dotnet"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Frontend (Angular)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "start-frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/Frontend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Local:.*http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Start All (Backend + Frontend)",
            "configurations": [
                "Backend (.NET)",
                "Frontend (Angular)"
            ],
            "stopAll": true,
            "preLaunchTask": "kill-ports"
        }
    ]
}