{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Watch)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "echo",
            "runtimeArgs": [
                "Backend running in watch mode"
            ],
            "preLaunchTask": "watch-backend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
        {
            "name": "Frontend (Angular)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/Frontend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Local:.*http://localhost:4200",
                "uriFormat": "http://localhost:4200",
                "action": "openExternally"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Start All (Backend + Frontend)",
            "configurations": [
                "Backend (Watch)",
                "Frontend (Angular)"
            ],
            "stopAll": true
        }
    ]
}