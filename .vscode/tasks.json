{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill-backend-port",
            "type": "shell",
            "command": "pkill -f 'Backend.dll' || lsof -ti:5033 | xargs kill -9 2>/dev/null || true",
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "kill-frontend-port",
            "type": "shell",
            "command": "lsof -ti:4200 | xargs kill -9 2>/dev/null || true",
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "build-backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Backend/Backend.csproj",
                "/property:GenerateFullPaths=true",
                "/property:UseAppHost=false",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "options": {
                "env": {
                    "NUGET_PACKAGES": "${workspaceFolder}/Backend/local_nuget",
                    "NUGET_SCRATCH": "${workspaceFolder}/Backend/nuget_scratch"
                }
            },
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "kill-backend-port"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PdfReader.sln",
                "/property:GenerateFullPaths=true",
                "/property:UseAppHost=false",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "options": {
                "env": {
                    "NUGET_PACKAGES": "${workspaceFolder}/Backend/local_nuget",
                    "NUGET_SCRATCH": "${workspaceFolder}/Backend/nuget_scratch"
                }
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-frontend",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/Frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Compiled successfully.*|.*Application bundle generation complete.*"
                }
            },
            "dependsOn": [
                "kill-frontend-port"
            ]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/PdfReader.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Backend/Backend.csproj",
                "--no-launch-profile"
            ],
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://localhost:5033",
                    "NUGET_PACKAGES": "${workspaceFolder}/Backend/local_nuget",
                    "NUGET_SCRATCH": "${workspaceFolder}/Backend/nuget_scratch"
                }
            },
            "isBackground": true,
            "problemMatcher": {
                "base": "$msCompile",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Determining projects to restore...",
                    "endsPattern": "Now listening on: http://localhost:5033"
                }
            },
            "dependsOn": [
                "kill-backend-port"
            ]
        },
        {
            "label": "Start App (No Debugger)",
            "type": "shell",
            "command": "./start_all.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}